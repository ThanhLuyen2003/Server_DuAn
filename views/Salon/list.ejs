  </ul>
</div>
        </div>
        </form>
      </div>
    </nav>
    </div>

    <div class="container">
      <table class="table table-bordered table-striped">
        <tr><th>ID</th> <th>Name</th> <th>Address</th> <th>Describe</th> <th>Image</th> <th>PhoneNumber</th> <th>Evalute</th>
        </tr>
        <% listSalon.forEach( ( row )=>{  %>
            <tr>
                <td><%= row._id %></td>
                <td> <%= row.name %></td>
                <td> <%= row.address %></td>
                <td> <%= row.describe %></td>
                <td>  <img src="<%=row.image %>" alt="" style="width: 60px; height: 60px;"></td>
                <td> <%= row.phone %></td>
                <td> <%= row.evalute %></td>
                <td><a type="button" class="btn btn-danger" href="/salon/edit/<%=row._id%>">Sửa
                </a>
                <td><a type="button" class="btn btn-danger" href="/salon/delete/<%=row._id%>">Xóa
                </a>
            </tr>
        
        
            <% } ) %>
        
        
        
        
        </table>
  </div>

    
