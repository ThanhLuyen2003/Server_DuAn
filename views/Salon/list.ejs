<%- include('../inc/header.ejs') %>
  <div class="container">
    <h1 style="font-weight: bold; text-align: center;  margin-top: 20px;">Danh sách Salon</h1>
    <nav class="navbar navbar-expand-lg">
      <div class="container-fluid">
        <form class="d-flex" role="search">
          <div class="d-flex justify-content-around align-items-center mb-9">
            <a type="button" class="btn btn-warning" style="width: 150px;" href="http://localhost:3000/salon/add">+ Thêm
              Salon
            </a>
            <div class="dropdown" style="margin-left: 20px;">
              <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown"
                aria-expanded="false">
                Sắp xếp theo
              </button>
              <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="/salon/sxtheoten">Tên</a></li>
                <li><a class="dropdown-item" href="/salon/sxtheodiachi">Địa chỉ</a></li>
                <li><a class="dropdown-item" href="/salon/sxtheosao">Đánh giá</a></li>
              </ul>
            </div>
          </div>
        </form>
      </div>
    </nav>
  </div>

  <div class="container">
    <table class="table table-bordered table-striped">
      <tr class="th">
        <th>Tên Salon</th>
        <th>Địa chỉ</th>
        <th>Mô tả</th>
        <th class="description-column center-content">Ảnh cơ sở</th>
        <th>Điện thoại</th>
        <th class="description-column center-content">Đánh giá</th>
        <th></th>


      </tr>
      <% listSalon.forEach( ( row )=>{ %>
        <tr>

          <td>
            <%= row.name %>
          </td>
          <td>
            <%= row.address %>
          </td>
          <td>
            <%= row.describe %>
          </td>
          <td> <img src="<%=row.image %>" alt="" style="width: 60px; height: 60px; margin-left: 12px;"></td>
          <td>
            <%= row.phone %>
          </td>
          <td>
            <%= row.evalute %>
          </td>
          <td>
            <div class="d-flex">
              <a href="/salon/edit/<%=row._id%>">
                <button type="button" class="btn btn-warning" style="margin-right: 10px;">Sửa</button>
              </a>
            </div>
          </td>

        </tr>


        <% } ) %>




    </table>
  </div>


  <div style="margin-left: 850px; margin-top: 50px;">
    <nav aria-label="Page navigation example">
      <ul class="pagination">
        <li class="page-item"><a class="page-link" href="http://localhost:3000/salon?currentPage-1&limit=5">Previous</a>
        </li>
        <li class="page-item"><a class="page-link" href="http://localhost:3000/salon?page=1&limit=5">1</a></li>
        <li class="page-item"><a class="page-link" href="http://localhost:3000/salon?page=2&limit=5">2</a></li>
        <li class="page-item"><a class="page-link" href="http://localhost:3000/salon?page=3&limit=5">3</a></li>
        <li class="page-item"><a class="page-link" href="http://localhost:3000/salon?page=4&limit=5">4</a></li>
        <li class="page-item"><a class="page-link" href="http://localhost:3000/salon?currentPage+1&limit=5">Next</a>
        </li>
      </ul>
    </nav>
  </div>

  <%- include('../inc/footer.ejs') %>