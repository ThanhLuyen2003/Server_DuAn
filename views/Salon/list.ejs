<%- include('../inc/header.ejs') %>
<div class="container">
    <h1 style="font-weight: bold; text-align: center;">Danh sách Salon</h1>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid">
        <form class="d-flex" role="search">
          <div class="col-3">
  <a type="button" class="btn btn-success" style="width: 150px;" href="http://localhost:3000/salon/add">+ Thêm Salon
  </a>
  <div class="dropdown">
  <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
    Sắp xếp theo
  </button>
  <ul class="dropdown-menu">
    <li><a class="dropdown-item" href="/salon/sxtheoten">Tên</a></li>
    <li><a class="dropdown-item" href="/salon/sxtheodiachi">Địa chỉ</a></li>
