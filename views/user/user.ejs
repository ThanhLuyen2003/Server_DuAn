<%- include('../inc/header.ejs') %>
  <div class="container">
    <h1 style="font-weight: bold; text-align: center; margin-top: 20px;">Danh sách khách hàng</h1>
    <nav class="navbar navbar-expand-lg">
      <div class="container-fluid">
        <form class="d-flex" role="search">
          <div class="d-flex justify-content-around align-items-center mb-9">
           
          </div>
          <form class="form-inline my-2 my-lg-0" method="post">
            <button style="margin-right: 10px;" class="btn btn-warning my-2 my-sm-0" type="submit">Tìm</button>
            <input class="form-control mr-sm-2" type="search" name="billSearch" id="searchInput" placeholder="Nhập tên khách hàng..." aria-label="Search">
        </form>
        </form>
      </div>
    </nav>
  </div>

  <div class="container">
    <% if (listUsers.length === 0) { %>
      <p style="text-align: center; font-size: 30px;">Không có dữ liệu !</p>
    <% } else { %>
    <table class="table table-bordered table-striped">
      <tr>
        <th>Tên khách hàng</th>
        <th>Số điện thoại</th>
        <th>Email</th>
        <th>Ảnh đại diện</th>
        <th>address</th>
      </tr>
      <% listUsers.forEach( ( row )=>{ %>
        <tr>
          <td>
            <a href="/user/detail-customer/<%=row._id%>"
              style="text-decoration: none; color: black;font-weight: 500; text-decoration: underline">
              <%= row.name %>
            </a>
          </td>
          <td>
            <%= row.phone %>
          </td>
          <td>
            <%= row.email %>
          </td>
          <td> 
            <img src="<%=row.avatar %>" alt="" style="width: 60px; height: 60px;margin-left: 10px;">
          </td>
          <td>
            <%= row.address %>
          </td>
        </tr>
        <% } ) %>
    </table>
    <% } %>
  </div>

  <div style="margin-left: 850px; margin-top: 50px;">
    <nav aria-label="Page navigation example">
      <ul class="pagination">
        <li class="page-item"><a class="page-link"
            href="http://localhost:3000/user?currentPage-1&limit=5">Previous</a></li>
        <li class="page-item"><a class="page-link" href="http://localhost:3000/user?page=1&limit=5">1</a></li>
        <li class="page-item"><a class="page-link" href="http://localhost:3000/user?page=2&limit=5">2</a></li>
        <li class="page-item"><a class="page-link" href="http://localhost:3000/user?page=3&limit=5">3</a></li>
        <li class="page-item"><a class="page-link" href="http://localhost:3000/user?page=4&limit=5">4</a></li>
        <li class="page-item"><a class="page-link" href="http://localhost:3000/user?currentPage+1&limit=5">Next</a>
        </li>
      </ul>
    </nav>
  </div>

  <%- include('../inc/footer.ejs') %>