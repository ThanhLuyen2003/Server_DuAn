<%- include('../inc/header.ejs') %>



  <div class="container">
    <h1 style="font-weight: bold; text-align: center; margin-top: 20px;">Danh sách sản phẩm</h1>
    <nav class="navbar navbar-expand-lg">
      <div class="container-fluid">
        <form class="d-flex" role="search"> 
          <div class="d-flex justify-content-around align-items-center mb-2">

            <a type="button" class="btn btn-warning" style="width: 160px; margin-right: 30px;"
              href="http://localhost:3000/product/add">+ Thêm sản phẩm
            </a>

            <div class="dropdown">
              <button style="margin-right: 700px;" class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown"
                aria-expanded="false">
                Sắp xếp theo
              </button>
              <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="/product/sxtheotensp">Tên</a></li>
                <li><a class="dropdown-item" href="/product/sxtheogiasp">Giá</a></li>
              </ul>
            </div>
            
          </div>

          <!-- thanh tìm kiếm -->
          <form class="form-inline my-2 my-lg-0" action="/search" method="GET">
            <input class="form-control mr-sm-2" type="text" name="query" id="searchInput" placeholder="Tìm kiếm..." aria-label="Search">
            <button class="btn btn-warning my-2 my-sm-0" type="submit">Tìm</button>
          </form>

          

          <script>
            const searchInput = document.getElementById('searchInput');
            const searchResultsTableBody = document.getElementById('searchResultsTableBody');
      
            searchInput.addEventListener('input', () => {
              const query = searchInput.value;
      
              // Gửi yêu cầu tìm kiếm bằng AJAX
              const xhr = new XMLHttpRequest();
              xhr.open('GET', `/search?query=${query}`, true);
              xhr.onreadystatechange = function() {
                if (xhr.readyState === XMLHttpRequest.DONE && xhr.status === 200) {
                  const searchResults = JSON.parse(xhr.responseText);
      
                  // Xóa nội dung hiện tại trong bảng
                  searchResultsTableBody.innerHTML = '';
      
                  // Hiển thị kết quả tìm kiếm trong bảng
                  searchResults.forEach(result => {
                    const row = document.createElement('tr');
                    row.innerHTML = `
                      <td>${result.id}</td>
                      <td>${result.name}</td>
                      <td>${result.age}</td>
                    `;
                    searchResultsTableBody.appendChild(row);
                  });
                }
              };
              xhr.send();
            });
          </script>
          <!--  code thanh tìm kiếm bên trên -->


        </form>
        
      </div>
      
    </nav>
  </div>

  <div class="container">
    <table id="productTable" class="table table-bordered table-striped">
      <tr class="text-sm-center">
        <th style="width: 30px;"> Số lượng nhập</th>
        <th style="width: 70px;">Ảnh</th>
        <th style="width: 300px;">Tên sản phẩm</th>
        <th>Nhãn hiệu</th>
        <th>Giá nhập</th>
        <th>Giá bán</th>
        <th style="width: 320px;">Mô tả</th>
        <th style="width: 120px;">Nguyên liệu</th>
        <th>Danh mục</th>
        <th>Trạng thái</th>
        <th></th>
      </tr>

      <% listProducts.forEach( ( row )=>{ %>
        <tr>
          <td>
            <%= row.soluongnhap %>
          </td>
          <td> <img src="<%=row.avatar %>" alt="" style="width: 60px; height: 60px; margin-left: 25px;"></td>
          <td>
            <%= row.name %>
          </td>
          <td>
            <%= row.trademark %>
          </td>
          <td>
            <%= row.pricenhap %>
          </td>
          <td>
            <%= row.price %>
          </td>
          <td>
            <%= row.describe %>
          </td>
          <td>
            <%= row.ingredient %>
          </td>
          <td>
            <%= row.type %>
          </td>
          <td></td>
          <td>
            <div class="d-flex">
              <a href="/product/edit/<%=row._id%>">
                <button type="button" class="btn btn-warning" style="margin-right: 10px;">Sửa</button>
              </a>

            </div>
          </td>
        </tr>


        <% } ) %>




    </table>
  </div>


  <div style="margin-left: 850px; margin-top: 50px;">
    <nav aria-label="Page navigation example">
      <ul class="pagination">
        <li class="page-item"><a class="page-link" href="http://localhost:3000/product?page=1&limit=5">Previous</a></li>
        <li class="page-item"><a class="page-link" href="http://localhost:3000/product?page=1&limit=5">1</a></li>
        <li class="page-item"><a class="page-link" href="http://localhost:3000/product?page=2&limit=5">2</a></li>
        <li class="page-item"><a class="page-link" href="http://localhost:3000/product?page=3&limit=5">3</a></li>
        <li class="page-item"><a class="page-link" href="http://localhost:3000/product?page=4&limit=5">4</a></li>
        <li class="page-item"><a class="page-link" href="http://localhost:3000/product?page=4&limit=5">Next</a></li>
      </ul>
    </nav>
  </div>

  <script>
    const productTable = document.getElementById('productTable');
    const rows = productTable.getElementsByTagName('tr');
  
    for (let i = 1; i < rows.length; i++) {
      const row = rows[i];
      const quantityInput = row.cells[0].textContent.trim();
  
      const statusCell = row.cells[row.cells.length - 2];
      const status = quantityInput === '0' || quantityInput === '' ? 'Không còn hàng' : 'Còn hàng';
      statusCell.textContent = status;
    }
  </script>

